<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/stock_code"
            android:layout_below="@+id/stock_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/Gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:id="@+id/stock_name"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/White"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:ellipsize="end"
            android:singleLine="true" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:text="Medium Text"
            android:id="@+id/stock_mktVal"
        android:textColor="@color/White"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Mkt Value"
        android:id="@+id/textView14"
        android:textColor="@color/White"
        android:layout_below="@+id/stock_mktVal"
        android:layout_alignParentRight="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stock_code"
        android:id="@+id/linearLayout">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:id="@+id/stock_pl"
                android:textColor="@color/White"
                android:paddingTop="10dp"
                android:layout_alignTop="@+id/stock_price"
                android:layout_centerHorizontal="true" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/stock_pl_perc"
                android:textColor="@color/White"
                android:layout_below="@+id/stock_pl"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:id="@+id/stock_shares"
                android:textColor="@color/White"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shares"
                android:id="@+id/textView"
                android:layout_below="@+id/stock_shares"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/White" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:id="@+id/stock_price"
                android:textColor="@color/White"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingTop="10dp" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/stock_change"
                    android:textColor="@color/White"
                android:layout_below="@+id/stock_price"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" (P/L)"
                android:id="@+id/textView18"
                android:layout_alignBottom="@+id/stock_pl"
                android:layout_toRightOf="@+id/stock_pl"
                android:layout_toEndOf="@+id/stock_pl"
                android:textColor="@color/White" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" (P/L%)"
                android:id="@+id/textView20"
                android:layout_below="@+id/stock_pl"
                android:layout_toRightOf="@+id/stock_pl_perc"
                android:layout_toEndOf="@+id/stock_pl_perc"
                android:textColor="@color/White" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
