<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="3dp"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/folderName"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/White"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/folderID"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/folderVal"
            android:layout_toStartOf="@+id/folderVal"
            android:layout_marginRight="52dp"
            android:layout_marginEnd="52dp"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3.89">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gl"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/White"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gp"
            android:textColor="@color/White"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_below="@+id/gl" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/folderVal"
            android:textColor="@color/Gray"
            android:text="Loading.."
            android:layout_above="@+id/gp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Market Value"
            android:id="@+id/textView21"
            android:layout_below="@+id/folderVal"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/White" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" (P/L%)"
            android:id="@+id/textView22"
            android:layout_alignTop="@+id/gp"
            android:layout_toRightOf="@+id/gp"
            android:layout_toEndOf="@+id/gp"
            android:textColor="@color/White" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" (P/L)"
            android:id="@+id/textView23"
            android:layout_above="@+id/gp"
            android:layout_toRightOf="@+id/gl"
            android:layout_toEndOf="@+id/gl"
            android:textColor="@color/White" />

    </RelativeLayout>

</LinearLayout>
